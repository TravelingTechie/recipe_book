    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "recipe book", root_path, id: "logo" %>
        <nav>
          <div class="navbar-header">
            <button id="hamburger" type="button" class="navbar-toggle collapsed">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Github Project", "https://github.com/worklifechaos/recipe_book",
                    target: "_blank" %></li>
            <li><%= link_to "WLC", "https://worklifechaos.com/",
                    target: "_blank" %></li>
            
            <% if logged_in? %>
              <%# Links for logged-in users %>
              <li><%= link_to "Users", users_path %></li>
              <li class="dropdown">
                <a href ="#" id="account" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul id="dropdown-menu" class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                    <li>
                      <%= link_to "Log out", logout_path,
                                       data: { "turbo-method": :delete } %>
                    </li>
                </ul>
              </li>
            <% else %>
              <%# Links for non-logged-in-users %>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>