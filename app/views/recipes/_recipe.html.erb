<li id="recipe-<%= recipe.id %>">
  <span class="title">Title: <%= recipe.title %> 
    <% if current_user?(recipe.user) %>
      <%= link_to "Edit", recipe %>
    <% end %></span>
  <span class="content">Recipe excerpt: <%= recipe.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(recipe.created_at) %> ago.
    <% if current_user?(recipe.user) %>
      <%= link_to "delete", recipe, data: { "turbo-method": :delete,
                                                turbo_confirm: "You sure?" } %>
    <% end %>
  </span>
</li>

